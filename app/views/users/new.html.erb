<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title> TOP: Forms Project</title>
  </head>
  <body>

    <%= form_for @user do |f| %>
      <%= f.label :email %>:
      <%= f.text_field :email %><br />
    
      <%= f.label :username %>:
      <%= f.text_field :username %><br />

      <%= f.label :password %>:
      <%= f.password_field :username %><br />

    
      <%= f.submit %>
    <% end %>

  </body>
</html>


<% if false %>
<form action="/users" method="POST">


<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

<label for="email">e-mail:</label>
  <input type="text" id="user[email]" name="user[email]"><br><br>

  <label for="username">username: </label>
  <input type="text" id="user[username]" name="user[username]"><br><br>


  <label for="password">password (4 characters minimum): </label>
  <input type="password" id="user[password]" name="user[password]" minlength="4" required><br><br>

  <input type="submit" value="Submit">
</form>

<%= form_tag '/users', method: "post" do %>
  <%= label_tag 'user[email]', 'email' %>
  <%= text_field_tag 'user[email]' %><br><br>
  
  <%= label_tag 'user[username]', 'username' %>
  <%= text_field_tag 'user[username]' %><br><br>

  <%= label_tag 'user[password]', 'password' %>
  <%= password_field_tag 'user[password]' %><br><br>

  <%= submit_tag 'submit' %>


<% end %>


<% end %>
  
 